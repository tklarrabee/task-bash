{
  "name": "mern",
  "version": "1.0.0",
  "description": "Mern Demo",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && yarn run start:prod || yarn run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"yarn run client\"",
    "client": "cd client && yarn run start",
    "install": "cd client && yarn install",
    "build": "cd client && yarn run build",
    "heroku-postbuild": "yarn run build"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.7"
  },
  "dependencies": {
    "animate.css": "^3.7.2",
    "axios": "^0.19.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "bootstrap": "^4.3.1",
    "connect-mongo": "^3.0.0",
    "express": "^4.16.3",
    "express-session": "^1.16.2",
    "if-env": "^1.0.4",
    "mongo": "^0.1.0",
    "mongodb": "^3.3.0",
    "mongoose": "^5.6.8",
    "mongoose-autopopulate": "^0.9.1",
    "package": "^1.0.1",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "react-animate-on-scroll": "^2.1.5",
    "react-bootstrap": "^1.0.0-beta.10",
    "react-dom": "^16.9.0",
    "react-fade-in": "^0.1.6",
    "react-loading": "^2.0.3",
    "react-lottie": "^1.2.3",
    "react-native": "^0.62.3",
    "react-router": "^5.0.1",
    "react-trello": "^2.2.2"
  }
}
